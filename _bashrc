# bash completion
[ -f /usr/local/etc/bash_completion ] && source /usr/local/etc/bash_completion

# prompt
__bashrc_ps1 () {
  local reset='\[\e[0m\]'

  # styles (tweaked for Solarized with dark background)
  local error_style='\[\e[1;7;31m\]'  # bold, reversed, red
  local arrow_style='\[\e[0;96m\]'    # regular, bright cyan
  local prompt_style='\[\e[1;96m\]'   # bold, bright cyan
  local git_style='\[\e[1;4;96m\]'    # bold, underlined, bright cyan

  _errst () { local st=$?; [ $st -ne 0 ] && printf "${1}${st}${2}"; }
  local errst="${reset}\$(_errst '${error_style} ' ' ${reset}\n ')"
  local prompt="${prompt_style}\w${reset}\$(__git_ps1 ' ${git_style}|%s|')${reset}"

  # one-line prompt
  #PS1="${errst}\n${prompt} "
  #PS2='… '

  # two-line prompt (the arrow looks best with Menlo)
  _arrow () { printf "${arrow_style}${1}${reset}"; }
  local arrow1="$(_arrow '╭')"
  local arrow2="$(_arrow '╰─►')"
  PS1="${errst}\n${arrow1} ${prompt}\n${arrow2} "
  PS2="${arrow2} "
} && __bashrc_ps1

